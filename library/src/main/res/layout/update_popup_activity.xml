<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white_semi_translucide"
  tools:ignore="MissingPrefix"
>
  <ScrollView
    android:id="@+id/scrollContainer"
    android:layout_width="@dimen/card_width"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:visibility="invisible"
    tools:visibility="visible"
  >

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="15dip"
      android:layout_marginEnd="20dip"
      android:layout_marginLeft="20dip"
      android:layout_marginRight="20dip"
      android:layout_marginStart="20dip"
      android:background="@drawable/white_card_background"
      android:elevation="2dip"
      android:gravity="center"
    >

      <ImageView
        android:id="@+id/close"
        android:layout_width="18dip"
        android:layout_height="18dip"
        android:layout_gravity="end"
        android:layout_margin="20dip"
        android:src="@drawable/ic_close"
        android:tint="@color/gray"
      />

      <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:gravity="center_horizontal"
        android:textColor="@color/dark_pink"
        android:textSize="22sp"
        tools:text="Mettez à jour votre app"
      />

      <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
      />

      <TextView
        android:id="@+id/paragraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginStart="10dip"
        android:gravity="center_horizontal"
        android:padding="10dip"
        android:textColor="@color/very_dark_gray"
        android:textSize="15sp"
        tools:text="Nous vous informons qu'une nouvelle version de l'application est disponible"
      />

      <TextView
        android:id="@+id/action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dp"
        android:background="@drawable/blue_rnd_btn"
        android:gravity="center_horizontal"
        android:paddingBottom="15dip"
        android:paddingEnd="70dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingStart="70dp"
        android:paddingTop="15dip"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:text="Mise à jour"
      />

      <TextView
        android:id="@+id/later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="5dip"
        android:gravity="center_horizontal"
        android:padding="15dip"
        android:text="@string/later"
        android:textColor="@color/very_dark_gray"
      />
    </LinearLayout>
  </ScrollView>
</RelativeLayout>
